<h1 style='background-color:rgb(32,128,188); color:rgb(255,255,255); padding:10px'> User List</h1>
<div>
  <table>
    <tr>
      <th>User Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td> <%= user.id %> </td>
        <td> <%= link_to user.name, user %> </td>
        <td> <%= link_to user.email, user %> </td>
      </tr>
    <% end %>
  </table>
</div>
<br>
